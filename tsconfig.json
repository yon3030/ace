{
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "outDir": "./out",
    "declarationMap": true,
  },
  "exclude": [
    "node_modules",
    "src/test",
    "src/keyboard",
    "src/**/*_test.js",
    "./src/mode/**/*",
    "types",
  ],
  "include": [
    "./src/**/*",
    "./ace.d.ts",
    "src/mode/text.js"
  ]
}
