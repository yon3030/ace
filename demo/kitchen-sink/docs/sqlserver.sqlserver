CREATE VIEW V_Orders
AS
SELECT
	
--#region Orders
	Orders.OrderID
	,Orders.CustomerID
	,Orders.OrderDate
--#endregion

	/*#region Customers*/
	,Customers.CompanyName
	,Customers.ContactName
	/*#endregion*/
	
--#region Other
	,DATEFROMPARTS(YEAR(GETDATE()), 1, 1) AS FirstDayOfYear
--#endregion

FROM Orders
INNER JOIN Customers
	ON Orders.CustomerID = Customers.CustomerID
